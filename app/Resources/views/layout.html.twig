    <!-- Intro Header -->
    <header class="intro" id="intro">
        <div class="intro-body">
            <div class="container">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <a href="#">
                            <h1 class="brand-heading">{{ 'appbundle.pres.billetterie.title'|trans }}</h1>
                            <p class="intro-text">
                                {{ 'appbundle.pres.billetterie.pres.section'|trans }}
                            </p>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Billetterie Section -->
    <section id="page-sample">
        <div class="container content-section text-left">
                {% block flash %}
                {% endblock %}
            <div class="row" id="stepblock">
                {% block stepwizard %}
                {% endblock %}
                <hr/>
                <div class="stepInfo" style="text-align: center">
                    <h2 class="text-center">
                        {% block informationTitle %}
                        {% endblock %}
                    </h2>
                    <p class="informationText">
                        {% block informationText %}
                        {% endblock %}
                    </p>
                </div>
                <hr/>
            </div>

            {% block form %}

            {% endblock %}
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <div class="container text-center">
            <p class="credits">
                Copyright &copy; <a href="http://www.adriendesmet.com">Adrien Desmet</a> - 2017<br/>
                "Aries" Template by WowThemes.net {{ 'appbundle.footer'|trans }} <a href="http://www.adriendesmet.com">Adrien Desmet</a>
            </p>
        </div>
    </footer>

    {% block javascripts %}
        <!-- jQuery -->
        <script src="{{asset('js/jquery.js')}}"></script>

        <!-- Bootstrap Core JavaScript -->
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>

        <!-- Plugin JavaScript -->
        <script src="{{ asset('js/jquery.easing.min.js') }}"></script>

        <!-- Custom Theme JavaScript -->
        <script src="{{asset('js/theme.js')}}"></script>

        <!-- FlatPickr-->
        <script src="https://unpkg.com/flatpickr"></script>
        <script src="https://npmcdn.com/flatpickr/dist/l10n/fr.js"></script>

        <!-- Custom -->
        <script src="{{asset('js/custom.js')}}"></script>

        <script>
            // Fonctionnement du calendrier FlatPickr
            $(".datepicker").flatpickr({
                {% if app.request.locale == 'fr' %}
                    locale: "{{ app.request.locale }}",
                {% else %}
                    locale: {
                        'firstDayOfWeek': 1
                    },
                {% endif %}
                inline: true,
                minDate: 'today',
                disable: [
                    function(date) {
                        return (date.getDay() === 2 || date.getDay() === 0);
                    },
                    function(date) {
                        // Récupération de l'année
                        var years = date.getFullYear();

                        // Récupération d'un tableau de jours fériés
                        var holidays = JoursFeries(years);
                        var ret = false;

                        holidays.forEach(function(test) {
                            if(test.getTime() === date.getTime()) {
                                console.log(test);
                                ret = true;
                            }
                        });
                        return ret;
                    }]
            });

            // Ajout d'une information lors d'une coche sur tarif réduit
            $('input:checkbox').change(
                function(){
                    if ($(this).is(':checked')) {
                        $(this).parent().append('<p class="infoTR" id="infoTR">{{ 'appbundle.step.2.form.placeholder.reduced.price.message'|trans }}</p>');
                    } else {
                        $(this).parent().find('#infoTR').remove();
                    }
                }
            );
            $('input:checkbox').trigger("change");

            // Ajout d'une information lors d'une coche d'un bouton radio (journée ou demi-journée)
            $('input:radio[name="order_customer_first_step[duration]"]').change(
                function(){
                    var $input = $("#order_customer_first_step_duration");
                    if ($(this).is(':checked') && this.value === "journée") {
                        $input.find('#infoDuration').remove();
                        $input.append('<p class="infoDuration" id="infoDuration">{{ 'appbundle.step.1.form.placeholder.duration.text.first'|trans }}</p>');
                    } else if ($(this).is(':checked') && this.value === "demi-journée") {
                        $input.find('#infoDuration').remove();
                        $input.append('<p class="infoDuration" id="infoDuration">{{ 'appbundle.step.1.form.placeholder.duration.text.second'|trans }}</p>');
                    }
                }
            );
            $('input:radio').trigger("change");
        </script>
    {% endblock %}
    </body>
</html>
