                    <li>
                        <a href="{{ path('homepage')}}">{{ 'appbundle.nav.billetterie'|trans }}</a>
                    </li>
                    <li>
                        {% if app.request.locale == 'fr' %}
                            <a href="{{ path('setlocale', {'_locale': 'en'}) }}">EN</a>
                        {% else %}
                            <a href="{{ path('setlocale', {'_locale': 'fr'}) }}">FR</a>
