{% extends 'layout.html.twig' %}
{% block title %}Récapitulatif{% endblock %}
{% block body %}
    <h3>Paiement</h3>

    <p>La somme total à regler est de {{ app.session.get('CommandeLouvre').price }} €</p>

    <form action="{{ path('confirmation') }}" method="POST">
        <script
                src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                data-key="pk_test_UkrYg88qxXhhJYayypUNfFuk"
                data-amount="{{ app.session.get('CommandeLouvre').price }}00"
                data-name="Musée du louvre"
                data-description="Paiement de vos billets d'entrée"
                data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
                data-locale="auto"
                data-zip-code="false"
                data-currency="eur">
        </script>
    </form>
{% endblock %}